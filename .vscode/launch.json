  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u", "tdd", "--no-timeouts", "--colors",
        "--require", "ts-node/register",
        "${workspaceFolder}/src/**/*.spec.*",
        "${workspaceFolder}/test/**/*.spec.*"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
  ]
}
